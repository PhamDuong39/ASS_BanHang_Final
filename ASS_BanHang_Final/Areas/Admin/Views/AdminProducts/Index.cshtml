@model IEnumerable<ASS_BanHang_Final.Models.Product>

@{
    ViewData["Title"] = "Quản lý Products";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


 <section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Datatables</h5>
                   
                    <a asp-asp-area="Admin" asp-controller="AdminProducts" asp-action="Create" type="button" class="btn btn-primary btn-sm">Create Product</a>
                    <a asp-asp-area="Admin" asp-controller="AdminProducts" asp-action="RollBackList" type="button" class="btn btn-primary btn-sm">Rollback List Product</a>

                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                               
                                <th scope="col">Name</th>
                                <th scope="col">Price</th>
                                <th scope="col">Available Quantity</th>
                                <th scope="col">Status</th>
                                <th scope="col">Supplier</th>
                                <th scope="col">Description</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if(Model != null)
                            {
                                foreach(var item in Model)
                                {
                                     <tr>
                                        
                                        <td>@item.Name</td>
                                        <td>@item.Price</td>
                                        <td>@item.AvailableQuantity</td>
                                        <td>@item.Status</td>
                                        <td>@item.Supplier</td>
                                        <td>@item.Description</td>
                                        <td>
                                            <a asp-asp-area="Admin" asp-controller="AdminProducts" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm btn-tone m-r-5">Detail</a>
                                            <a asp-asp-area="Admin" asp-controller="AdminProducts" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm btn-tone m-r-5">Edit</a>
                                            <a asp-asp-area="Admin" asp-controller="AdminProducts" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm btn-tone m-r-5">Delete</a>
                                        </td>
                                    </tr>
                                }
                            }                         
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->
                </div>
            </div>
        </div>
    </div>
</section>



