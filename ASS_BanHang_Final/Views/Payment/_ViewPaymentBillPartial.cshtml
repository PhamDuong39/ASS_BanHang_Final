@model ASS_BanHang_Final.Models.Bill

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Multi Columns Form</h5>
        <!-- Multi Columns Form -->
        <form asp-action="RegisterTheCart" class="row g-3 px-2">
            <div class="col-md-12">
                <label for="inputName5" class="form-label">Username</label>
                <input readonly value="" type="text" class="form-control" id="inputName5">
            </div>

            <div class="form-group col-md-12">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" id="inputAddres5s" placeholder="1234 Main St" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="SDT" class="form-label"></label>
                <input asp-for="SDT" id="inputZip" class="form-control" />
                <span asp-validation-for="SDT" class="text-danger"></span>
            </div>

            <div class="text-center py-5 col-md-12">
                <button type="submit" class="btn btn-primary">Đặt hàng ngay</button>
            </div>
        </form><!-- End Multi Columns Form -->
    </div>
</div>
