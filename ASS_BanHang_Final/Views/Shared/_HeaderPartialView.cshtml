@{
    ViewData["Title"] = "Home Page";
    string user = ViewData["user"] == null ?"" : ViewData["user"] as string;
}


<div id="site-header-wrap">
    <!-- Header -->
    <header id="header" class="header clearfix">
        <div class="container-fluid container-width-94 clearfix" id="site-header-inner">
            <div id="logo" class="logo float-left">
                <a href="index.html" title="logo">
                    <img src="images/logo.png" alt="image" width="107" height="24" data-retina="images/logo@2x.png" data-width="107" data-height="24">
                </a>
            </div><!-- /.logo -->
            <div class="mobile-button"><span></span></div>
            <ul class="menu-extra">
                <li class="box-search">
                    <a class="icon_search header-search-icon" href="#"></a>
                    <form role="search" method="get" class="header-search-form" action="#">
                        <input type="text" value="" name="s" class="header-search-field" placeholder="Search...">
                        <button type="submit" class="header-search-submit" title="Search">Search</button>
                    </form>
                </li>      
                

                <li class="box-login">
                        <a class="icon_login" asp-controller="Account" asp-action="Login"></a>
                    </li>

                @if(user == "")
                {
                    <li class="box-login">
                        <a class="icon_login" asp-controller="Account" asp-action="Login"></a>
                    </li>
                    <li class="box-login">
                        <a class="icon_login" asp-controller="Account" asp-action="Register">+</a>
                    </li>
                }
                else
                {
                    <li class="box-login">
                        <a>@user</a>
                    </li>
                     <li class="box-login">
                        <a  asp-controller="Account" asp-action="LogOutUser">Logout</a>
                    </li>
                     <li class="box-login">
                        <a  asp-controller="BillHistory" asp-action="ShowBillHistory">Show all bill</a>
                    </li>
                }

                
                <li class="box-cart nav-top-cart-wrapper">
                    <a class="icon_cart nav-cart-trigger active" asp-controller="Cart" asp-action="Index"></a>
                    <div class="nav-shop-cart">
                        <div class="widget_shopping_cart_content">
                            <div class="woocommerce-min-cart-wrap">
                                <ul class="woocommerce-mini-cart cart_list product_list_widget ">
                                    <li class="woocommerce-mini-cart-item mini_cart_item">
                                        <button asp-controller="BillHistory" asp-action="ShowBillHistory" class="btn btn-sm">Theo dõi đơn của bạn</button>
                                    </li>
                                </ul>
                            </div><!-- /.widget_shopping_cart_content -->
                        </div>
                    </div><!-- /.nav-shop-cart -->
                </li>
            </ul><!-- /.menu-extra -->
            <div class="nav-wrap">
                <nav id="mainnav" class="mainnav">
                    <ul class="menu">
                        <li class="active">
                            <a asp-controller="Home" asp-action="Index">HOME</a>
                        </li>
                        <li>
                            <a asp-controller="Product" asp-action="Index">SHOP</a>
                            <ul class="submenu">
                                <li>
                                    <a href="shop-3col.html">Shop Layouts</a>
                                </li>
                                <li>
                                    <a href="shop-detail-des.html">Shop Details</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="coming-soon.html">PAGE</a>
                        </li>
                        <li >
                            <a href="blog-list.html">BLOG</a>
                        </li>
                        <li>
                            <a href="contact.html">CONTACT</a>
                        </li>
                    </ul>
                </nav><!-- /.mainnav -->
            </div><!-- /.nav-wrap -->                                                    
        </div><!-- /.container-fluid -->
    </header><!-- /header -->
</div><!-- /#site-header-wrap -->